<?xml version="1.0" encoding="UTF-8"?>
<manifest
    package="com.troshkova.portfolioprogect.visiondetector"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:theme="@style/SplashTheme"
        android:supportsRtl="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:largeHeap="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:allowBackup="true">

        <activity android:name=".MainActivity" android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".EyeActivity" android:theme="@style/AppTheme" android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".KeyboardActivity" android:theme="@style/AppTheme" android:windowSoftInputMode="stateAlwaysVisible|adjustResize"/>

    </application>

</manifest>